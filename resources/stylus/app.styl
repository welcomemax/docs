body
html
    height 100%

.body
    font-family "Helvetica Neue", Helvetica, Arial, sans-serif
    color #212121
    background #eef2f5
    margin 0

    &-container
        display flex
        flex-direction column
        justify-content space-between
        width 100%
        height 100%
        max-width 800px
        padding 0 20px
        box-sizing border-box
        margin 0 auto
        background #fff

main
    padding 20px 0
    height 100%
    display flex
    justify-content space-between

.content
    width 100%
    height 100%
    display flex
    flex-direction column

.list
    height 100%
    margin-right 20px

.detail
    height 100%

.item
    padding 20px
    border-bottom 1px solid #dedede
    border-radius 3px
    margin 12px
    box-shadow 0 0 1px 1px rgba(0,0,0,.05)

    &:first-child
        margin-top 0

    &:last-child
        margin-bottom 0

    &-header
        &-info
            h2
            h3
                margin 0
                margin-bottom 8px
                font-size 18px
            p
                margin 0
                font-size 15px
                color #868686

    &-body
        font-size 18px
        white-space pre

    &-footer
        display flex
        justify-content space-between

        &-button
            text-decoration none
            font-size 15px
            color #212121
            background transparent
            padding 4px 12px
            border-radius 2px
            border 1px solid #dedede
            cursor pointer
            transition transform .3s

            &:hover
                transform translateY(-2px)

.pagination
    display flex
    justify-content center
    align-items center

    &-pages
        display inline-block
        font-size 15px
        margin 0 20px

    &-button
        display flex
        justify-content center
        align-items center
        width 28px
        height 28px
        font-size 18px
        color dodgerblue
        background transparent
        text-decoration none
        border 1px solid #dedede
        border-radius 50%
        outline none
        cursor pointer
        transition transform .3s

        &-prev
            &:hover
                transform translateX(-2px)

        &-next
            &:hover
                transform translateX(2px)

.sidebar
    width 200px

    &-group
        margin-bottom 20px

        &-header
            font-size 13px
            text-transform uppercase

        &-body
            padding 12px 0

.header
    padding 20px 0

    h1&-title
        margin 0
        margin-bottom 8px
        font-size 20px

    p&-caption
        margin 0
        font-size 16px

.footer
    padding 20px 0

    &-nav
        ul
            margin 0
            padding 0

            li
                display inline-block

                a
                    font-size 13px
                    text-decoration none
                    display block
                    color dodgerblue
