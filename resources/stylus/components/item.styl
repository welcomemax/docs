@import '~jodit/build/jodit.min.css'

.item
    position relative
    display flex
    flex-direction column
    padding 20px
    box-sizing border-box
    border-radius 3px 3px 0 0

    &:after
        content ""
        position absolute
        bottom 0
        left 0
        height 3px
        width 100%
        transition background .3s

    &-open
        cursor pointer
        right 0
        top 0
        width 80px
        height 100%
        position absolute
        z-index 1
        color #38393a
        background linear-gradient(to right, rgba(0,0,0,0) 0%,rgba(0,0,0,0.05) 100%)

        &:hover .icon
            transform translateX(2px)

        & .icon
            width 32px
            height 32px
            top 50%
            margin-top -16px
            right 20px
            position absolute
            transition transform .3s

    &-close
        cursor pointer
        right 20px
        top 20px
        position absolute
        z-index 1
        color #E91E63

        &:hover .icon
            transform translateY(-2px)

        & .icon
            width 32px
            height 32px
            transition transform .3s

    &-header
        &-info
            h2
            h3
                margin 0
                margin-bottom 8px
                font-size 18px
            p
                margin 0
                font-size 14px
                color #868686

    &-body
        margin 12px 0
        position relative

    &-preview
        display flex
        flex-direction column
        position relative
        min-height 110px
        max-height 110px
        height 600px
        margin 12px -20px 12px -20px
        background #dedede
        transition max-height .3s, background .3s
        overflow hidden

        &.item-preview-active
            background url('data:image/png;base64,')
            max-height 600px

        &-button
            top 0
            right 0
            position absolute
            height 100%
            width 100%
            color #232526
            cursor pointer

            &:hover
                & .icon
                    border-radius 75% 15%

            & .icon
                position absolute
                top 50%
                left 50%
                width 40px
                height 40px
                margin-top -20px
                margin-left -20px

            .item-preview-active &
                margin-right 0
                top 20px
                right 20px
                height 40px
                width 40px

                & .icon
                    width 20px
                    height 20px

        &-iframe
            width 100%
            height 100%

        &-icon
            width 88px
            height 88px
            position absolute
            bottom -16px
            right -16px

            & *
                fill #fff !important

    &-footer
        display flex
        align-items center
        justify-content space-between
        margin-top auto

        &-date
            font-size 13px
            color #868686
